@model List<CreditCardProvider>

@{
    ViewBag.Title = "Credit Card Provider List";
    Layout = "_Layout";
    var exception = ViewData["Exception"] as string;
    var successMessage = ViewData["SuccessMessage"] as string;
}

<h2>Credit Card Provider List</h2>

@if (!string.IsNullOrWhiteSpace(exception))
{
    <p style="color: red">@exception</p>
}

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <p style="color: green">@successMessage</p>
}

<table style="width:50%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Major Industry Identifier (MII)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var creditCardProvider in Model.OrderBy(x => x.Name))
        {
            <tr>
                <td>@creditCardProvider.Name</td>
                <td>@creditCardProvider.MajorIndustryIdentifier</td>
                <td><a asp-action="Update" asp-route-id="@creditCardProvider.Id">Update</a></td>
                <td><a asp-action="Delete" asp-route-id="@creditCardProvider.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add">Add Credit Card Provider</a>

